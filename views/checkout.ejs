<!DOCTYPE html>
<html lang="en">
<head>
  <title>Kala-Kriti | Checkout</title>
  <%- include('partials/base-head') %>
</head>
<body class="bg-gray-50">
  <!-- Set the active page for the header -->
  <% locals.page = 'checkout' %>
  
  <!-- Header -->
  <%- include('partials/header') %>
  
  <!-- Checkout Header Section -->
  <section class="bg-white py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-semibold mb-4">Checkout</h1>
        <p class="text-gray-600 text-lg">
          Complete your purchase securely
        </p>
      </div>
    </div>
  </section>
  
  <!-- Checkout Content Section -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Left: Checkout Form -->
        <div class="w-full lg:w-2/3">
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Shipping Information</h2>
            
            <form id="checkout-form" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1" for="fullName">Full Name</label>
                  <input type="text" id="fullName" name="fullName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1" for="email">Email Address</label>
                  <input type="email" id="email" name="email" value="<%= user ? user.email : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="address">Street Address</label>
                <input type="text" id="address" name="address" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1" for="city">City</label>
                  <input type="text" id="city" name="city" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1" for="state">State/Province</label>
                  <input type="text" id="state" name="state" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1" for="postalCode">Postal Code</label>
                  <input type="text" id="postalCode" name="postalCode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" for="country">Country</label>
                <select id="country" name="country" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" required>
                  <option value="">Select Country</option>
                  <option value="US">United States</option>
                  <option value="CA">Canada</option>
                  <option value="UK">United Kingdom</option>
                  <option value="AU">Australia</option>
                  <option value="IN">India</option>
                  <!-- Add more countries as needed -->
                </select>
              </div>
            </form>
          </div>
          
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold mb-4">Payment Method</h2>
            
            <div class="space-y-4">
              <div>
                <label class="flex items-center space-x-3">
                  <input type="radio" name="paymentMethod" value="credit_card" checked class="h-4 w-4 text-gray-800 focus:ring-gray-500">
                  <span class="flex items-center">
                    <i class="fab fa-cc-visa text-xl mr-2"></i>
                    <i class="fab fa-cc-mastercard text-xl mr-2"></i>
                    <i class="fab fa-cc-amex text-xl"></i>
                    <span class="ml-2">Credit / Debit Card</span>
                  </span>
                </label>
                
                <div id="credit-card-form" class="mt-4 ml-7 space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1" for="cardNumber">Card Number</label>
                    <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
                  </div>
                  
                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1" for="expiryDate">Expiry Date</label>
                      <input type="text" id="expiryDate" placeholder="MM/YY" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1" for="cvv">CVV</label>
                      <input type="text" id="cvv" placeholder="123" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
                    </div>
                  </div>
                </div>
              </div>
              
              <div>
                <label class="flex items-center space-x-3">
                  <input type="radio" name="paymentMethod" value="paypal" class="h-4 w-4 text-gray-800 focus:ring-gray-500">
                  <span class="flex items-center">
                    <i class="fab fa-paypal text-xl mr-2 text-blue-600"></i>
                    <span>PayPal</span>
                  </span>
                </label>
              </div>
              
              <div>
                <label class="flex items-center space-x-3">
                  <input type="radio" name="paymentMethod" value="bank_transfer" class="h-4 w-4 text-gray-800 focus:ring-gray-500">
                  <span class="flex items-center">
                    <i class="fas fa-university text-xl mr-2"></i>
                    <span>Bank Transfer</span>
                  </span>
                </label>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Right: Order Summary -->
        <div class="w-full lg:w-1/3">
          <div class="bg-white rounded-lg shadow p-6 sticky top-6">
            <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
            
            <div id="summary-items" class="border-b border-gray-200 pb-4 mb-4">
              <!-- Order items will be loaded with JavaScript -->
              <div class="text-center text-gray-500 py-4">
                <i class="fas fa-spinner fa-spin mr-2"></i> Loading cart items...
              </div>
            </div>
            
            <div class="py-4 border-b border-gray-200 mb-4">
              <div class="flex justify-between mb-2">
                <span class="text-gray-600">Subtotal</span>
                <span id="summary-subtotal" class="font-medium">$0.00</span>
              </div>
              <div class="flex justify-between mb-2">
                <span class="text-gray-600">Shipping</span>
                <span id="summary-shipping" class="font-medium">Free</span>
              </div>
              <div id="discount-row" class="flex justify-between mb-2 hidden">
                <span class="text-gray-600">Discount</span>
                <span id="summary-discount" class="font-medium text-green-600">-$0.00</span>
              </div>
            </div>
            
            <div class="flex justify-between text-xl font-semibold mb-6">
              <span>Total</span>
              <span id="summary-total">$0.00</span>
            </div>
            
            <button id="place-order-btn" class="w-full px-6 py-3 bg-black text-white font-medium rounded-md hover:bg-gray-800 transition-colors duration-200 flex items-center justify-center">
              <i class="fas fa-lock mr-2"></i> Place Order
            </button>
            
            <p class="text-sm text-gray-500 mt-4 text-center">
              By placing your order, you agree to our <a href="/terms" class="underline">Terms of Service</a> and <a href="/privacy" class="underline">Privacy Policy</a>.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Loading Overlay -->
  <div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full text-center">
      <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-gray-900 mx-auto mb-4"></div>
      <h3 class="text-xl font-semibold mb-2">Processing Your Order</h3>
      <p class="text-gray-600">Please wait while we process your payment...</p>
    </div>
  </div>
  
  <!-- Footer -->
  <%- include('partials/footer') %>
  
  <!-- Common Scripts -->
  <%- include('partials/base-scripts') %>
  
  <!-- Checkout Page Specific Scripts -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      loadCartForCheckout();
      
      const paymentMethods = document.querySelectorAll('input[name="paymentMethod"]');
      paymentMethods.forEach(method => {
        method.addEventListener('change', function() {
          const creditCardForm = document.getElementById('credit-card-form');
          if (this.value === 'credit_card') {
            creditCardForm.style.display = 'block';
          } else {
            creditCardForm.style.display = 'none';
          }
        });
      });
      
      document.getElementById('place-order-btn').addEventListener('click', placeOrder);
    });
    
    function loadCartForCheckout() {
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      const summaryItemsContainer = document.getElementById('summary-items');
      
      if (cart.length === 0) {
        window.location.href = '/cart'; // Redirect to cart if empty
        return;
      }
      
      // Clear existing items
      summaryItemsContainer.innerHTML = '';
      
      // Calculate totals
      let subtotal = 0;
      
      // Add each item to the summary
      cart.forEach(item => {
        const quantity = item.quantity || 1;
        const itemTotal = item.price * quantity;
        subtotal += itemTotal;
        
        const summaryItem = document.createElement('div');
        summaryItem.className = 'flex justify-between py-2 text-sm';
        summaryItem.innerHTML = `
          <div class="flex items-center">
            <img src="${item.image}" alt="${item.title}" class="w-10 h-10 object-cover rounded mr-3">
            <div>
              <div class="font-medium">${item.title}</div>
              <div class="text-gray-600">Qty: ${quantity}</div>
            </div>
          </div>
          <span>$${itemTotal.toFixed(2)}</span>
        `;
        
        summaryItemsContainer.appendChild(summaryItem);
      });
      
      // Update summary totals
      document.getElementById('summary-subtotal').textContent = `$${subtotal.toFixed(2)}`;
      
      // Apply discount if any
      let discountAmount = 0;
      const activePromo = localStorage.getItem('activePromo');
      
      if (activePromo) {
        try {
          const promo = JSON.parse(activePromo);
          if (promo.type === 'percentage') {
            discountAmount = subtotal * (promo.value / 100);
          } else if (promo.type === 'fixed') {
            discountAmount = promo.value;
          }
          
          document.getElementById('discount-row').classList.remove('hidden');
          document.getElementById('summary-discount').textContent = `-$${discountAmount.toFixed(2)}`;
        } catch (e) {
          console.error('Invalid promo data', e);
        }
      }
      
      // Calculate total
      const shippingCost = 0; // Free shipping by default
      const total = subtotal - discountAmount + shippingCost;
      document.getElementById('summary-total').textContent = `$${total.toFixed(2)}`;
    }
    
    async function placeOrder() {
      // Validate form
      const form = document.getElementById('checkout-form');
      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }
      
      // Show loading overlay
      document.getElementById('loading-overlay').classList.remove('hidden');
      
      // Get cart data
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      if (cart.length === 0) {
        showNotification('Your cart is empty', 'error');
        document.getElementById('loading-overlay').classList.add('hidden');
        return;
      }
      
      // Get form data
      const fullName = document.getElementById('fullName').value;
      const email = document.getElementById('email').value;
      const address = document.getElementById('address').value;
      const city = document.getElementById('city').value;
      const state = document.getElementById('state').value;
      const postalCode = document.getElementById('postalCode').value;
      const country = document.getElementById('country').value;
      
      // Get payment method
      const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
      
      // Calculate totals
      let subtotal = 0;
      cart.forEach(item => {
        subtotal += item.price * (item.quantity || 1);
      });
      
      // Get shipping cost
      const shippingCost = 0; // Free shipping by default
      
      // Apply discount if any
      let discountAmount = 0;
      const activePromo = localStorage.getItem('activePromo');
      if (activePromo) {
        try {
          const promo = JSON.parse(activePromo);
          if (promo.type === 'percentage') {
            discountAmount = subtotal * (promo.value / 100);
          } else if (promo.type === 'fixed') {
            discountAmount = promo.value;
          }
        } catch (e) {
          console.error('Invalid promo data', e);
        }
      }
      
      // Calculate total
      const total = subtotal - discountAmount + shippingCost;
      
      try {
        // Send order to server
        const response = await fetch('/checkout/place-order', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            fullName,
            email,
            address,
            city,
            state,
            postalCode,
            country,
            paymentMethod,
            cartItems: cart,
            shipping: 'standard', // or 'express' if you have that option
            subtotal,
            shippingCost,
            discount: discountAmount,
            total
          })
        });
        
        const data = await response.json();
        
        if (!data.success) {
          throw new Error(data.message || 'Failed to place order');
        }
        
        // Clear cart and active promo
        localStorage.removeItem('cart');
        localStorage.removeItem('activePromo');
        
        // Redirect to confirmation page
        window.location.href = `/checkout/confirmation/${data.orderId}`;
      } catch (error) {
        document.getElementById('loading-overlay').classList.add('hidden');
        showNotification(error.message || 'Error placing order. Please try again.', 'error');
        console.error('Error placing order:', error);
      }
    }
    
    function showNotification(message, type = 'info') {
      // Create notification element
      const notification = document.createElement('div');
      
      // Set classes based on type
      let bgColor = 'bg-gray-800';
      if (type === 'error') bgColor = 'bg-red-600';
      if (type === 'success') bgColor = 'bg-green-600';
      
      notification.className = `fixed bottom-4 right-4 ${bgColor} text-white py-2 px-4 rounded-md shadow-lg transform translate-y-full opacity-0 transition-all duration-300 z-50`;
      notification.textContent = message;
      document.body.appendChild(notification);
      
      // Show notification
      setTimeout(() => {
        notification.style.transform = 'translate(0)';
        notification.style.opacity = '1';
      }, 100);
      
      // Hide notification after 3 seconds
      setTimeout(() => {
        notification.style.transform = 'translateY(10px)';
        notification.style.opacity = '0';
        
        // Remove from DOM after animation completes
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 300);
      }, 3000);
    }
  </script>
</body>
</html> 