  <!-- Future Plans Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-semibold mb-3">Our Future Plans</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Innovations and expansions in the world of art</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Future Plan 1 -->
        <div class="bg-white rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow duration-300 text-center">
